########################################
# ZOHO API AUTHENTICATION (Required)
########################################

# Your Zoho OAuth Client ID
ZOHO_CLIENT_ID=your_client_id_here

# Your Zoho OAuth Client Secret
ZOHO_CLIENT_SECRET=your_client_secret_here

# Redirect URI configured in Zoho API Console (any valid URL you used)
ZOHO_REDIRECT_URI=https://example.com

# One-time Authorization Code (used only once to generate refresh token)
# Leave blank after generating token
ZOHO_AUTH_CODE=your_authorization_code_here

# Refresh Token (final token used by scripts to get access tokens)
ZOHO_REFRESH_TOKEN=your_refresh_token_here

# Your Zoho Books Organization ID
ZOHO_ORGANIZATION_ID=your_organization_id_here


########################################
# OPTIONAL: Region-Specific Zoho Domain
########################################
# IN Data Center (default): https://www.zohoapis.in
# US: https://www.zohoapis.com
# EU: https://www.zohoapis.eu
# AU: https://www.zohoapis.com.au
ZOHO_API_DOMAIN=https://www.zohoapis.in

# Zoho OAuth Token Endpoint
ZOHO_TOKEN_URL=https://accounts.zoho.in/oauth/v2/token


########################################
# DATABASE CONFIGURATION (Required)
########################################

# SQL Server Hostname or Azure SQL Server Name
SQL_SERVER=your_sql_server_here

# Database Name
SQL_DATABASE=your_database_name_here

# SQL Username
SQL_USERNAME=your_sql_username_here

# SQL Password
SQL_PASSWORD=your_sql_password_here


########################################
# OPTIONAL SETTINGS
########################################

# SQL Driver (keep default unless needed)
SQL_DRIVER=ODBC Driver 18 for SQL Server

# Adjust API Rate Limiting Safely
RATE_LIMIT_SLEEP=0.2
